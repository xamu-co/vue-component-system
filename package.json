{
	"name": "@open-xamu-co/components",
	"version": "0.0.1",
	"description": "Shared web components for the xamu project",
	"author": "@xamu-co",
	"workspaces": [
		"packages/types",
		"packages/helpers",
		"packages/svelte",
		"packages/vue"
	],
	"private": true,
	"scripts": {
		"i": "yarn --frozen-lockfile",
		"lint:eslint": "eslint --ext .ts,.js --ignore-path .gitignore .",
		"lint:prettier": "prettier . --check --ignore-unknown",
		"lint": "yarn lint:eslint && yarn lint:prettier",
		"p:types": "yarn workspace @open-xamu-co/components-types",
		"p:helpers": "yarn workspace @open-xamu-co/components-helpers",
		"p:vue": "yarn workspace @open-xamu-co/vue-component-system",
		"p:svelte": "yarn workspace @open-xamu-co/svelte-component-system",
		"build": "yarn workspaces run build",
		"release": "yarn workspaces run semantic-release",
		"release:dry": "yarn workspaces run semantic-release --dry-run",
		"dev:svelte": "yarn p:svelte dev",
		"dev:vue": "yarn p:vue dev"
	},
	"devDependencies": {
		"@commitlint/cli": "^9.1.1",
		"@commitlint/config-conventional": "^9.1.1",
		"@open-xamu-co/eslint-config": "https://gitpkg.now.sh/xamu-co/common/packages/eslint?dev",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"@types/node": "^18.14.0",
		"@typescript-eslint/eslint-plugin": "^5.39.0",
		"@typescript-eslint/parser": "^5.39.0",
		"eslint": "^8.25.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"prettier": "^2.0.5",
		"rimraf": "^3.0.2",
		"semantic-release": "^17.1.1",
		"semantic-release-monorepo": "^7.0.5",
		"typescript": "^5.0.4"
	},
	"engines": {
		"node": ">=16.19.0",
		"yarn": ">=1.22.4"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn check --integrity && lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.ts": [
			"prettier --write"
		],
		"*.vue": [
			"prettier --write"
		]
	},
	"dependencies": {
		"svelte": "^4.0.5",
		"vue": "^3.3.4"
	}
}
