{
   "compilerOptions": {
      "module": "ESNext",
      "target": "ES2015",
      "declaration": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "allowJs": true,
      "isolatedModules": true,
      "strict": true,
      "noImplicitAny": true,
      "baseUrl": ".",
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "./dist/esm",
      "rootDir": "src",
      "lib": [
         "ESNext",
         "ESNext.AsyncIterable",
         "DOM"
      ],
      "typeRoots": [
         "types",
         "node_modules/@types"
      ]
   },
   "include": [
      "./src/**/*"
   ],
   "exclude": [
      "node_modules",
      "dist"
   ]
}