{
   "compilerOptions": {
      "module": "commonjs",
      "target": "es2015",
      "declaration": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "allowJs": true,
      "strict": true,
      "noImplicitAny": true,
      "baseUrl": ".",
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "./lib",
      "rootDir": "src",
      "lib": [
         "ESNext",
         "ESNext.AsyncIterable",
         "DOM"
      ],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
   },
   "include": [
      "./src/**/*"
   ],
   "exclude": [
      "node_modules",
      "lib"
   ]
}